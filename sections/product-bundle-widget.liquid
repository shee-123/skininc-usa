{% if product.metafields.meta.bundle_widget_shortcode %}
<div id="custom_bundle_widget_section" class="custom_bundle_product_widget">
  <div class="container">
  	{{ product.metafields.meta.bundle_widget_shortcode }}
  </div>
</div>
{% endif %}

<style type="text/css">
  .custom_spaced{
      margin: 0;
      padding: 80px 0px;
      border-top: 1px solid #f4f4f4;
      border-bottom: 1px solid #f4f4f4;
  }
  .bndlr-inner-products-container .bndlr-mnm-available-products .bndlr-mix-and-match{
    padding: 20px 20px 30px;
    max-width: 300px !important;
  }
  .bndlr-container .bndlr-break-plus-signs .bndlr-add-to-cart{
    border-radius: 0px;
    font-size: 13px !important;
    text-align: center;
    letter-spacing: 0.2em;
    font-family: neuzeit-grotesk,sans-serif !important;
    font-weight: 300;
    padding: 14px 28px;
    border: 1px solid #d7b4b5;
    margin-top: 15px;
  }
  .bundler-target-element{
    display: inline-block;
  }
  .bundler-target-element > div.bndlr-container{
    display: inline-block;
    width: auto;
  }
  .custom_bundle_product_widget > div.container{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .bndlr-products-container .bndlr-product{
    max-width: 260px !important;
  }
  .bndlr-products-container .bndlr-add-to-cart{
    font-family: neuzeit-grotesk,sans-serif !important;
    font-size: 13px;
    text-align: center;
    letter-spacing: 0.2em;
    border: 1px solid #e8c5c5;
    font-weight: 300;
    padding: 14px 28px;
    margin-top: 15px;
  }
</style>

{% schema %}
  {
    "name": "Bundle Product Widget",
    "settings": [
		{
          "type": "header",
          "content": "Bundle Product Widget",
		  "info": "Bundle product widget will come from widget shortcode of custom meta field."
        }
	]
  }
{% endschema %}