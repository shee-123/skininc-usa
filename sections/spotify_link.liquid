<a href="{{ section.settings.link_url }}" class="app_btn">
  <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt | escape }}">     
  
</a>
{% schema %}
  {
    "name": "spotify_link",
    "settings": [
  {
    "type": "image_picker",
    "id": "image",
    "label": "Image",
    "info": "1200 x 1200px png recommended"
  },
  {
    "type": "url",
    "id": "link_url",
    "label": "Link URL"
  }
	]
  }
{% endschema %}