<div class="ProductMeta">
  
  {%- comment -%}
  {%- if section.settings.show_vendor and product.vendor != blank -%}
    <h2 class="ProductMeta__Vendor Heading u-h6">
      {%- assign vendor_handle = product.vendor | handle -%}
      {%- assign collection_for_vendor = collections[vendor_handle] -%}
      {%- unless collection_for_vendor.empty? -%}
        <a href="{{ collection_for_vendor.url }}">{{ product.vendor }}</a>
      {%- else -%}
        {{- product.vendor -}}
      {%- endunless -%}
    </h2>
  {%- endif -%}
  {%- endcomment -%}
  
   
  
  <h1 class="ProductMeta__Title Heading u-h2">
    {%- if template.name == 'product' -%}
      {{- product.title -}}
    {%- else -%}
      <a href="{{ product.url }}">{{ product.title }}</a>
    {%- endif -%}
  </h1>
  
  {%- if product.handle == "sabi_subscription_program"  -%}   
  <div class="no_price"></div>
  {%- elsif product.template_suffix != 'coming-soon' and product.template_suffix != 'skinid' -%}
    <div class="ProductMeta__PriceList Heading">
      {%- if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price -%}
        <span class="ProductMeta__Price Price Price--highlight Text--subdued u-h4" data-money-convertible data-lion-price-for-product-id="{{ product.id }}">{{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}</span>
        <span class="ProductMeta__Price Price Price--compareAt Text--subdued u-h4" data-money-convertible>({{ product.selected_or_first_available_variant.compare_at_price | money_without_trailing_zeros }} value)</span>
      {%- else -%}
        <span class="ProductMeta__Price Price Text--subdued u-h4" data-lion-price-for-product-id="{{ product.id }}" data-money-convertible>{{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}</span>
      {%- endif -%}
    </div>
  	{%- unless product.template_suffix == 'bundle' or product.template_suffix == 'custom-recovery-mask-bundle' or product.template_suffix == 'custom-bundle' -%}
  	<p class="affirm-as-low-as" data-page-type="product" data-amount="{{product.selected_or_first_available_variant.price}}"></p>
  	{% endunless %}
  {%- endif -%}
  
  {%- if show_rating != false -%}
    {%- include 'yotpo-stars' -%}
  {%- endif -%}
  
  <!--   Yotpo Q&A code -->
  <div class='yotpo QABottomLine'
     data-appkey='2M7EWtsqBBXYs55SSgDdH8YIpXS82RMLDhbg4DV7'
     data-product-id='{{ product.id }}'></div>
  
  {%- if product.template_suffix == 'bundle' or product.template_suffix == 'custom-recovery-mask-bundle' -%}
    {% if product.id == 4795695661152 %}
    <a href="/pages/skin-id" class="product_customize_bundle_btn">Customize Your Mask</a>
    {% endif %}
    <a href="#custom_bundle_widget_section" class="build_own_bundle_btn">Build Your Own Bundle</a>
  {% endif %}
  
  {%- if product.template_suffix == 'bundle-add-to-cart' -%}
  <div id="add_to_cart_custom_bundle_btn">{{ product.metafields.meta.bundle_widget_shortcode }}</div>
  {% endif %}

  {%- if show_description and section.settings.description_below_add_to_cart == false and product.description != blank -%}
    <div class="ProductMeta__Description Rte">
      {{ product.description }}
    </div>
  {%- endif -%}
</div>

<style>

   .yotpo-icon-double-bubble, .yotpo-stars { margin: 0 5px 0 0 !important; }

   div.yotpo.bottomLine { display: inline-block; margin: 0 10px 1px 0;}

   .thumbnail .yotpo a { display: inline-block; }

   div.yotpo.QABottomLine { display: inline-block;  padding-bottom: 15px;}
  
  .product_customize_bundle_btn{
    padding: 14px 28px;
    background: #d7b4b5;
    color: #ffffff;
    border: 1px solid #d7b4b5;
    text-transform: uppercase;
    font-size: 13px;
    text-align: center;
    letter-spacing: 0.2em;
    font-family: neuzeit-grotesk,sans-serif;
    font-weight: 300;
    font-style: normal;
    display: flex;
    justify-content: center;
    margin-top: 35px;
  }
  .build_own_bundle_btn{
    padding: 14px 28px;
    background: #d7b4b5;
    color: #ffffff;
    border: 1px solid #d7b4b5;
    text-transform: uppercase;
    font-size: 13px;
    text-align: center;
    letter-spacing: 0.2em;
    font-family: neuzeit-grotesk,sans-serif;
    font-weight: 300;
    font-style: normal;
    display: flex;
    justify-content: center;
    margin-top: 15px;
  }
  #add_to_cart_custom_bundle_btn .bndlr-inner-products-container > div{
    display: none;
  }
  #add_to_cart_custom_bundle_btn .bndlr-inner-products-container .bndlr-add-to-cart{
    display: block;
