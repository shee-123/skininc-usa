      left: 0px;
    }
    #add_to_cart_custom_bundle_btn-sticky-wrapper .bndlr-products-container{
      margin-bottom: 0px;
    }
    #add_to_cart_custom_bundle_btn-sticky-wrapper .bndlr-bundle-checkout-warning{
      margin: 0px;
    }
    .is-sticky #add_to_cart_custom_bundle_btn{
		padding: 15px;
    }
    .is-sticky #add_to_cart_custom_bundle_btn .bndlr-add-to-cart{
      padding: 22px 15px;
      font-size: 18px;
    }
  }
</style>

